<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-onfido" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>OnfidoPlugin</name>
    <js-module name="OnfidoPlugin" src="www/OnfidoPlugin.js">
        <clobbers target="cordova.plugins.OnfidoPlugin"/>
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="OnfidoPlugin">
                <param name="android-package" value="com.onfido.OnfidoPlugin"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file parent="/*" target="AndroidManifest.xml"/>
        <source-file src="src/android/com/onfido/OnfidoPlugin.java" target-dir="src/com/onfido"/>
    </platform>

    <platform name="ios">
        <js-module src="www/plugin.js" name="plugin">
            <runs/>
            <clobbers target="OnfidoPlugin" />
        </js-module>
        <config-file target="config.xml" parent="/*">
            <feature name="OnfidoPlugin">
                <param name="ios-package" value="OnfidoPlugin" onload="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/OnfidoPlugin.h" />
        <source-file src="src/ios/OnfidoPlugin.m" />
    </platform>
</plugin>